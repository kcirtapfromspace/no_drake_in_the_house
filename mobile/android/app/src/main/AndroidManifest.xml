<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="house.nodrakeinthe.android">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:name=".DNPApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DNPManager"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DNPManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep link intents -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="dnp"
                      android:host="action" />
            </intent-filter>
        </activity>

        <!-- DNP Management Activity -->
        <activity
            android:name=".activities.DNPManagementActivity"
            android:exported="true"
            android:theme="@style/Theme.DNPManager.NoActionBar">
            <intent-filter>
                <action android:name="house.nodrakeinthe.ADD_ARTIST" />
                <action android:name="house.nodrakeinthe.REMOVE_ARTIST" />
                <action android:name="house.nodrakeinthe.VIEW_DNP_LIST" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <!-- Quick Settings Tile -->
        <service
            android:name=".services.DNPQuickSettingsTile"
            android:exported="true"
            android:icon="@drawable/ic_block"
            android:label="@string/quick_settings_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Notification Listener Service -->
        <service
            android:name=".services.MediaNotificationListener"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- Background Service -->
        <service
            android:name=".services.DNPBackgroundService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Boot Receiver -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Tasker Integration -->
        <receiver
            android:name=".receivers.TaskerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="house.nodrakeinthe.TASKER_ADD_ARTIST" />
                <action android:name="house.nodrakeinthe.TASKER_REMOVE_ARTIST" />
                <action android:name="house.nodrakeinthe.TASKER_CHECK_STATUS" />
                <action android:name="house.nodrakeinthe.TASKER_SKIP_TRACK" />
            </intent-filter>
        </receiver>

        <!-- Media Button Receiver -->
        <receiver
            android:name=".receivers.MediaButtonReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>