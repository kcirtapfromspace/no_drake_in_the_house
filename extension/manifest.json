{
  "manifest_version": 3,
  "name": "Kiro Music Blocklist Manager",
  "version": "1.0.0",
  "description": "Block unwanted artists across music streaming platforms",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://open.spotify.com/*",
    "https://music.youtube.com/*",
    "https://music.apple.com/*",
    "https://tidal.com/*",
    "https://listen.tidal.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["content-scripts/spotify.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content-scripts/youtube-music.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://music.apple.com/*"],
      "js": ["content-scripts/apple-music.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://tidal.com/*",
        "https://listen.tidal.com/*"
      ],
      "js": ["content-scripts/tidal.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["ui/*", "utils/*"],
      "matches": [
        "https://open.spotify.com/*",
        "https://music.youtube.com/*",
        "https://music.apple.com/*",
        "https://tidal.com/*",
        "https://listen.tidal.com/*"
      ]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kiro Music Blocklist Manager"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}